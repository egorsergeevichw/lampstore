<script type="text/ng-template" id="imageModal">
    <div class="modal image-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" ng-controller="ImageCropController">
            <div class="modal-content">
                <div style="margin-top: 20px; text-align: center;">
                    <i style="color: #2a7be9;" class="fa fa-fw fa-scissors"></i> <span>Select an area</span>
                </div>
                
                <div style="width: 100%; height: 400px;">
                    <img-crop area-type="square" image="viewModel.rawImage" result-image="viewModel.croppedImage"></img-crop>
                </div>

                <div style="text-align: center; margin-bottom: 30px;">
                    <a btn-request-state ng-click="saveImage()" class="save-tag-avatar" style="margin-bottom: 0; margin-top: 0; cursor: pointer;">Save</a>
                </div>
            </div>
        </div>
    </div>
</script>
