@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="feedback-content" ng-controller="FeedbackController">
    <div class="custom-container" ng-show="!isSuccess">
        <div class="content-header">
            <h3>
                <i class="fa fa-comments" aria-hidden="true"></i>Feedback
            </h3>
        </div>

        <form ng-submit="sendMessage()">
            <div class="form-group">
                <label class="control-label">
                    Full name / Company name<span>*</span>:
                </label>
                <input type="text"
                       ng-model="viewModel.name"
                       class="form-control"
                       required>
            </div>
            <div class="form-group">
                <label class="control-label">
                    Email<span>*</span>:
                </label>
                <input type="email"
                       ng-model="viewModel.email"
                       class="form-control"
                       required>
            </div>
            <div class="form-group">
                <label class="control-label">
                    Your message<span>*</span>:
                </label>
                <textarea ng-model="viewModel.message" class="form-control" rows="5" required></textarea>
            </div>
            <button btn-request-state class="btn btn-primary">Sign Up</button>
        </form>
    </div>
    <div class="custom-container" ng-show="isSuccess">
        <hr />
        <h3><i class="fa fa-paper-plane" aria-hidden="true"></i>Thank you! Your message has been sent.</h3>
        <hr />
        <p>
            We received your message
            <br />
            and will try to respond as soon as possible.
        </p>
    </div>
</div>