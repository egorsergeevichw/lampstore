@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="registration-content">
    <div class="custom-container" ng-controller="LoginController">
        <div class="content-header">
            @if (ViewBag.IsConfirmation)
            {
                <h3>
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>Confirmation success
                </h3>
            }
            else
            {
                <h3>
                    <i class="fa fa-sign-in" aria-hidden="true"></i>Login
                </h3>
            }
        </div>
        <form ng-submit="login()">
            <div class="form-group">
                <label class="control-label">Email:</label>
                <input type="email"
                       ng-model="viewModel.email"
                       class="form-control"
                       required>
            </div>
            <div class="form-group">
                <label class="control-label">Password:</label>
                <input type="password"
                       ng-model="viewModel.password"
                       class="form-control"
                       required>
            </div>
            <button btn-request-state class="btn btn-primary">Log In</button>
        </form>
        <div class="sub-content">
            <span>
                <a href="">Restore password</a>
                or
                <a href="@Url.RouteUrl("RegistrationRoute")">create new account.</a>
            </span>
        </div>
    </div>
</div>