@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="registration-content" ng-controller="RegistrationController">
    <div class="custom-container">
        <div class="content-header">
            <h3 ng-show="!isSuccess">
                <i class="fa fa-user-circle-o" aria-hidden="true"></i>Registration
            </h3>
            <h3 ng-show="isSuccess">
                <i class="fa fa-envelope" aria-hidden="true"></i>Registration success
            </h3>
        </div>

        <form ng-submit="registration()" ng-show="!isSuccess">
            <div class="form-group">
                <label class="control-label">
                    First name<span>*</span>:
                </label>
                <input type="text"
                       ng-model="viewModel.firstName"
                       class="form-control"
                       required>
            </div>
            <div class="form-group">
                <label class="control-label">
                    Last name<span>*</span>:
                </label>
                <input type="text"
                       ng-model="viewModel.lastName"
                       class="form-control"
                       required>
            </div>
            <div class="form-group">
                <label class="control-label">
                    Company name:
                </label>
                <input type="text"
                       ng-model="viewModel.companyName"
                       class="form-control">
            </div>
            <div class="form-group">
                <label class="control-label">
                    Email<span>*</span>:
                </label>
                <input type="email"
                       ng-model="viewModel.email"
                       class="form-control"
                       required>
            </div>
            <div class="form-group">
                <label class="control-label">
                    Password<span>*</span>:
                </label>
                <input type="password"
                       ng-model="viewModel.password"
                       ng-class="{ 'invalid' : invalid }"
                       class="form-control"
                       required>
            </div>
            <div class="form-group">
                <label class="control-label">
                    Re-Type Password<span>*</span>:
                </label>
                <input type="password"
                       ng-model="viewModel.rePassword"
                       ng-change="check()"
                       ng-class="{ 'invalid' : invalid }"
                       class="form-control"
                       required>
            </div>
            <button btn-request-state class="btn btn-primary">Sign Up</button>
        </form>
        <div class="sub-content" ng-show="!isSuccess">
            <span>
                If you already have an account, please <a href="@Url.RouteUrl("LoginRoute")">login.</a>
            </span>
        </div>
    </div>
    <div class="custom-container" ng-show="isSuccess">
        <p>
            We send confiramation mail on your email address.
            <br />
            Confirm your mail box by link and then return to log in.
        </p>
    </div>
</div>